
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Controls access to user profile documents and their subcollections.
     * A user can read, create, update, and delete their own document and subcollections.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Rules for the nested 'reportedIssues' subcollection.
      // Inherits the ownership check from the parent.
      match /reportedIssues/{reportId} {
        allow read, write: if isOwner(userId);
      }
    }

    /**
     * @description Controls access to municipality worker profiles.
     * For now, any authenticated user can read this data, but no one can write it.
     */
    match /municipalityWorkers/{workerId} {
      allow get, list: if request.auth != null;
      allow write: if false;
    }

    /**
     * @description Controls access to issue priority documents.
     * For now, this data is publicly readable, but no one can write it.
     */
    match /issuePriorities/{issueId} {
      allow get, list: if true;
      allow write: if false;
    }
  }
}
