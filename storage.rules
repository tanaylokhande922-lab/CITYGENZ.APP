
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Restrict access to files within the 'issues' folder.
    // The path is structured as 'issues/{userId}/{fileName}'.
    match /issues/{userId}/{fileName} {
      /**
       * @description Allows a user to read and write files only within their own user-specific folder.
       * The 'userId' in the path must match the UID of the authenticated user.
       */
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
